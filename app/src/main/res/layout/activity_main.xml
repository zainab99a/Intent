<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="25dp"
    android:gravity="top|center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent"
        android:layout_margin="10dp"
        android:textStyle="bold"
    android:textColor="@color/black"
    android:textSize="20sp"/>

    <Button
        android:id="@+id/web"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:drawableLeft="@drawable/ic_autorenew_24"
        android:layout_height="wrap_content"
        android:onClick="web_uri"
        android:text="web" />

    <Button
        android:id="@+id/google"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/ic_baseline_map_24"
        android:text="map"
        android:onClick="map"/>
    <Button
        android:id="@+id/tel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:text="tel"
        android:onClick="call"/>

    <Button
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_add_photo_alternate_24"
        android:text="share image"
        android:onClick="Image"/>
    <Button
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/ic_baseline_add_to_photos_24"
        android:text="multiImage"
        android:onClick="MultiImage"/>

    <Button
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:text="email"
        android:onClick="sendEmail"/>

    <Button
        android:id="@+id/text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="share text"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/ic_baseline_text_fields_24"
        android:onClick="message"/>

    <Button
        android:id="@+id/alarm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/ic_baseline_access_alarm_24"
        android:text="alarm"
        android:onClick="turnAlarm"/>
</LinearLayout>